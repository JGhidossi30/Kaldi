<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94CE9A"
    tools:context=".MerchantMainActivity">

    <Button
        android:id="@+id/manageStore"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:text="Manage Stores"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/signOut"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Sign Out"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/drinkerProfile"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="80dp"
        android:text="Drinker Profile"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addStore" />

    <Button
        android:id="@+id/addStore"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:text="Add Store"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/removeStore"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="75dp"
        android:text="Remove Store"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageStore" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>